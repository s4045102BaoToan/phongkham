<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- css -->
  <link rel="stylesheet" href="/css/color.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/index.css">
  <!-- animations -->
  <link rel="stylesheet" href="/css/animation.css">
  <link rel="stylesheet" href="/css/loadingscreen.css">
  <title>Dịch vụ</title>
</head>

<body>
  <!-- LOADING SCREEN -->
  <%- include('partials/loadingscreen.ejs') %>
  <!-- ALL OF CONTENT -->
  <div class="background-white all-content">
    <!-- this nav bar has been disabled -->
    <%- include('partials/disabled-navbar.ejs') %>
    <!-- navbar current-->
    <%- include('partials/nav-bar.ejs') %>
    
    


    <!-- BODY -->
    <div class="background-heavy-teal text text-white">
      <!-- title -->
      <div id="dichvuStart" class="text-center h-auto">
        <div class="top-0 z-3" id="whiteToHeavyTealGradient"></div>
        <h1 class="animation-slide-right m-0 fst-italic">Dịch vụ</h1>
        <div class="bottom-0 z-3 opacity-0" id="whiteToHeavyTealGradient"></div>
      </div>
      <!-- content -->

      <!-- function for converting 1000 to 1.000 -->
      <% function formatNumberToCustomDecimal(value) {
        // Convert number to string and format it
        return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "."); // Replace comma with period
      } %>
      <!-------------------------- Khám phụ khoa -------------------------->
      <div class="d-flex justify-content-between mt-2 mx-2 p-3" id="dichvuItems">
        <div class="w-100" id="KPK">
          <h1 class="background-dark-teal w-100 p-3 z-3 KPK" id="dichvuItemsTitle">Khám phụ khoa</h1>
          <% for(item of dichvuArray){ %>
            <% if(item.class === "KPK"){%>
            <div class="animated-dichvu d-flex mb-3" onclick="toggleOverflow(event)">
              <div class="mx-3 text-nowrap"><h4 class="my-1 me-0 overflow-maxwidth-custom"><%= item.name %></h4></div>
              <div class="border-bottom border-2 border-white w-100 mx-0"></div>
              <div class="mx-3 me-4 "><h4 class="my-1"><%= formatNumberToCustomDecimal(parseInt(item.price)/ 1000)%>K</h4></div>
            </div>
            <% }} %>
        </div>
        <!-- <div class="align-content-center fw-bolder fs-1">≫ . ⋙</div> -->
      </div>
      <!-------------------------- Kế hoạch hóa gia đình -------------------------->
      <div class="d-flex justify-content-between mt-2 mx-2 p-3" id="dichvuItems">
        <div class="w-100" id="KHHGD">
          <h1 class="background-dark-teal w-100 p-3 z-3" id="dichvuItemsTitle">Kế hoạch hóa gia đình
          </h1>
          <% for(item of dichvuArray){ %>
            <% if(item.class === "KHHGD"){%>
            <div class="animated-dichvu d-flex mb-3" onclick="toggleOverflow(event)">
              <div class="mx-3 text-nowrap"><h4 class="my-1 overflow-maxwidth-custom"><%= item.name %></h4></div>
              <div class="border-bottom border-2 border-white w-100 mx-0"></div>
              <div class="mx-3 me-4"><h4 class="my-1"><%= formatNumberToCustomDecimal(parseInt(item.price)/ 1000)%>K</h4></div>
            </div>
            <% }} %>
        </div>
        <!-- <div class="align-content-center fw-bolder fs-1">≫ . ⋙</div> -->
      </div>

      <!-------------------------- Xét nghiệm -------------------------->
      <div class="d-flex justify-content-between mt-2 mx-2 p-3" id="dichvuItems">
        <div class="w-100" id="XN">
          <h1 class="background-dark-teal w-100 p-3 z-3 XN" id="dichvuItemsTitle">Xét nghiệm
          </h1>
          <% for(item of dichvuArray){ %>
            <% if(item.class === "XN"){%>
            <div class="animated-dichvu d-flex mb-3" onclick="toggleOverflow(event)">
              <div class="mx-3 text-nowrap"><h4 class="my-1 overflow-maxwidth-custom"><%= item.name %></h4></div>
              <div class="border-bottom border-2 border-white w-100 mx-0"></div>
              <div class="mx-3 me-4 "><h4 class="my-1"><%= formatNumberToCustomDecimal(parseInt(item.price)/ 1000)%>K</h4></div>
            </div>
            <% }} %>
        </div>
        <!-- <div class="align-content-center fw-bolder fs-1">≫ . ⋙</div> -->
      </div>

      <!----------------------------- footer ----------------------------->
        <%- include('partials/footer.ejs') %>
    </div>
  </div>
  <!-- GSAP -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
  <!-- GSAP scroll trigger -->
  <script src="/javascript/gsapScrollTrigger.js"></script>

  <!-- bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <!-- javascripts -->
  <!-- <script src="/javascript/animation.js"></script> -->
  <script src="/javascript/loadingscreen.js"></script>
  <script src="/javascript/dropdownToggle.js"></script>
  <script src="/javascript/scrollSaver.js"></script>
  <script src="/javascript/dichvu.js"></script>
  
  

</body>

</html>